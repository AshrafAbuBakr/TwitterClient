platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

def common_pods
	pod 'TwitterKit', '~> 3.0'
	pod 'XLPagerTabStrip', '~> 8.0'
	pod 'ObjectMapper'
	pod 'Kingfisher', '~> 4.0'
	pod 'BFKit-Swift'
	pod 'RealmSwift'
	pod 'ObjectMapper+Realm'
	pod 'ReachabilitySwift'
end

target 'TwitterClient' do
	common_pods
end

target 'TwitterClientTests' do
	common_pods
end
